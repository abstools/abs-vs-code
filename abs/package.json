{
    "name": "abs",
    "displayName": "ABS",
    "description": "Support for the Abs language",
    "icon": "images/ABS_logo.png",
    "version": "0.1.1",
    "publisher": "abs-models-org",
    "author": {
        "name": "Rudolf Schlatte"
    },
    "license": "SEE LICENSE IN LICENSE",
    "repository": {
        "type": "git",
        "url": "https://github.com/abstools/abs-vs-code/"
    },
    "homepage": "https://github.com/abstools/abs-vs-code",
    "bugs": {
        "url": "https://github.com/abstools/abs-vs-code/issues"
    },
    "engines": {
        "vscode": "^1.95.3"
    },
    "categories": [
        "Programming Languages"
    ],
    "main": "./out/extension.js",
    "activationEvents": [],
    "contributes": {
        "languages": [
            {
                "id": "abs",
                "aliases": [
                    "Abs",
                    "abs"
                ],
                "extensions": [
                    ".abs"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "abs",
                "scopeName": "source.abs",
                "path": "./syntaxes/abs.tmLanguage.json"
            }
        ],
        "snippets": [
            {
                "language": "abs",
                "path": "./snippets/abs.json"
            }
        ],
        "commands": [
            {
                "command": "abs.compile",
                "title": "Compile Current File",
                "category": "ABS"
            }
        ],
        "menus": {
            "commandPalette": [
                {
                    "command": "abs.compile",
                    "when": "editorLangId == abs"
                }
            ]
        },
        "configuration": {
            "title": "ABS",
            "properties": {
                "abs.compileCommand": {
                    "type": "string",
                    "default": "absc",
                    "description": "The name of or path to the ABS compiler."
                },
                "abs.backend": {
                    "type": "string",
                    "enum": [
                        "--erlang",
                        "--java",
                        "--maude"
                    ],
                    "enumDescriptions": [
                        "Erlang",
                        "Java",
                        "Maude"
                    ],
                    "default": "--java",
                    "description": "The default backend for code generation."
                },
                "abs.compileOptions": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "default": [],
                    "description": "Compiler options for the ABS compiler; see the output of `absc -h` for a list."
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src",
        "test": "vscode-test"
    },
    "dependencies": {
        "child_process": "^1.0.2",
        "path": "^0.12.7",
        "which": "^3.0.1"
    },
    "devDependencies": {
        "@types/mocha": "^10.0.10",
        "@types/node": "20.x",
        "@types/vscode": "^1.95.3",
        "@types/which": "^3.0.0",
        "@typescript-eslint/eslint-plugin": "^8.17.0",
        "@typescript-eslint/parser": "^8.17.0",
        "@vscode/test-cli": "^0.0.10",
        "@vscode/test-electron": "^2.4.1",
        "eslint": "^9.16.0",
        "typescript": "^5.7.2"
    }
}
